<?xml version="1.0" encoding="UTF-8"?>
<project>
	<modelVersion>4.0.0</modelVersion>

	<groupId>dummy</groupId>
	<artifactId>dummy</artifactId>
	<version>0.0.0-SNAPSHOT</version>

	<properties>
		<tycho-version>2.7.5</tycho-version>
		<source-url>http://www.xpect-tests.org/updatesite/nightly/</source-url>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-p2-extras-plugin</artifactId>
				<version>${tycho-version}</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>mirror</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<source>
						<repository>
							<id>source-repo</id>
							<url>${source-url}</url>
							<layout>p2</layout>
						</repository>
					</source>
<!--
					<latestVersionOnly>true</latestVersionOnly>
-->
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
